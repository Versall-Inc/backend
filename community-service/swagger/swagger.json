{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Community Service API",
    "description": "API documentation for the Community Service application"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": ["http"],
  "consumes": ["application/json", "multipart/form-data"],
  "produces": ["application/json"],
  "paths": {
    "/channels": {
      "post": {
        "summary": "Create a new channel",
        "parameters": [
          {
            "name": "user-id",
            "in": "header",
            "required": true,
            "type": "string",
            "description": "User ID for authentication"
          },
          {
            "name": "name",
            "in": "formData",
            "required": true,
            "type": "string",
            "description": "Name of the channel"
          },
          {
            "name": "handle",
            "in": "formData",
            "required": true,
            "type": "string",
            "description": "Unique handle for the channel"
          },
          {
            "name": "isPrivate",
            "in": "formData",
            "required": true,
            "type": "boolean",
            "description": "Whether the channel is private"
          },
          {
            "name": "photo",
            "in": "formData",
            "type": "file",
            "description": "Optional photo for the channel"
          }
        ],
        "responses": {
          "201": {
            "description": "Channel created successfully"
          },
          "400": {
            "description": "Invalid input"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/posts": {
      "post": {
        "summary": "Create a new post",
        "parameters": [
          {
            "name": "user-id",
            "in": "header",
            "required": true,
            "type": "string",
            "description": "User ID for authentication"
          },
          {
            "name": "channelId",
            "in": "formData",
            "required": true,
            "type": "string",
            "description": "ID of the channel"
          },
          {
            "name": "text",
            "in": "formData",
            "type": "string",
            "description": "Text content of the post"
          },
          {
            "name": "description",
            "in": "formData",
            "type": "string",
            "description": "Description of the post"
          },
          {
            "name": "photo",
            "in": "formData",
            "type": "file",
            "description": "Optional photo for the post"
          }
        ],
        "responses": {
          "201": {
            "description": "Post created successfully"
          },
          "400": {
            "description": "Invalid input"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "get": {
        "summary": "Get all posts for a specific channel",
        "parameters": [
          {
            "name": "channelId",
            "in": "query",
            "required": true,
            "type": "string",
            "description": "ID of the channel to fetch posts for"
          },
          {
            "name": "user-id",
            "in": "header",
            "required": true,
            "type": "string",
            "description": "User ID for authentication"
          }
        ],
        "responses": {
          "200": {
            "description": "Posts fetched successfully"
          },
          "400": {
            "description": "Invalid input"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/comments": {
      "post": {
        "summary": "Create a new comment or reply",
        "parameters": [
          {
            "name": "user-id",
            "in": "header",
            "required": true,
            "type": "string",
            "description": "User ID for authentication"
          },
          {
            "name": "postId",
            "in": "formData",
            "required": true,
            "type": "string",
            "description": "ID of the post the comment belongs to"
          },
          {
            "name": "text",
            "in": "formData",
            "required": true,
            "type": "string",
            "description": "Text content of the comment"
          },
          {
            "name": "parentId",
            "in": "formData",
            "type": "string",
            "description": "(Optional) ID of the parent comment for a reply"
          }
        ],
        "responses": {
          "201": {
            "description": "Comment created successfully"
          },
          "400": {
            "description": "Invalid input"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "get": {
        "summary": "Get all comments for a specific post",
        "parameters": [
          {
            "name": "postId",
            "in": "query",
            "required": true,
            "type": "string",
            "description": "ID of the post to fetch comments for"
          },
          {
            "name": "user-id",
            "in": "header",
            "required": true,
            "type": "string",
            "description": "User ID for authentication"
          }
        ],
        "responses": {
          "200": {
            "description": "Comments fetched successfully"
          },
          "400": {
            "description": "Invalid input"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  }
}
